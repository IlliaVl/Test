<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ateamo.UI.EventFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:background="#ffe4f3f8">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="48dp"
            android:id="@+id/homeBadgeImageView"
            android:src="@drawable/badge_left_mask"
            android:layout_below="@+id/eventDateTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/eventTimeTextView"
            android:layout_alignTop="@+id/visitorBadgeImageView"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="38dp" />

        <ImageView
            android:layout_width="43dp"
            android:layout_height="48dp"
            android:id="@+id/visitorBadgeImageView"
            android:src="@drawable/badge_left_mask"
            android:layout_below="@+id/eventDateTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeBadgeImageView"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/locationEventTextView"
                android:paddingTop="3dp"
                android:paddingBottom="10dp"
                android:textSize="28dp"
                android:textAlignment="center"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/homeNameTextView"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="vs"
                android:id="@+id/textView11"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/visitorNameTextView"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/eventDateTextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#646363" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actionsListView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout3" />

    </RelativeLayout>
</LinearLayout>
